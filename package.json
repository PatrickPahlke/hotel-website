{
  "name": "hotel-website",
  "version": "1.0.0",
  "description": "A hotel website project",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "open:dev": "opener http://localhost:9090",
    "build-css": "node-sass --include-path scss scss/main.scss   dist/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "build-js": "uglifyjs js/*.js -c -m reserved=['$','require','exports'] --source-map --output dist/js/main.js",
    "watch-js": "watchify js/*.js -o dist/js/main.js -dv",
    "build": "npm run build-css && npm run build-js",
    "watch": "npm run watch-css & npm run watch-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PatrickPahlke/hotel-website.git"
  },
  "author": "Laura Rodgers",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^0.7.3",
    "jshint": "^2.5.10",
    "live-reload": "^0.2.0",
    "minifyify": "^6.0.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.2.1",
    "opener": "^1.4.0",
    "parallelshell": "^1.0.0",
    "rimraf": "^2.2.8",
    "uglify-js": "^3.3.8"
  },
  "bugs": {
    "url": "https://github.com/PatrickPahlke/hotel-website/issues"
  },
  "homepage": "https://github.com/PatrickPahlke/hotel-website#readme"
}
